generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Agendamento {
  id              String   @id @default(cuid())
  cliente         String
  
  // NOVO CAMPO ADICIONADO (Opcional para n√£o quebrar dados antigos)
  telefone        String?  
  
  servico         String
  data            String
  horario         String
  status          String   @default("PENDENTE")
  valor           Float
  paymentId       String?
  
  metodoPagamento String?  
  
  createdAt       DateTime @default(now())
  
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}